{
    "name": "wireui/wireui",
    "description": "TallStack components",
    "type": "library",
    "keywords": [
        "livewire components",
        "livewire-ui",
        "wireui",
        "laravel components",
        "blade components"
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^9.49|^10.0",
        "livewire/livewire": "^2.11",
        "wireui/heroicons": "^2.3"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^9.5|^10.0",
        "orchestra/testbench": "^7.20|^8.0",
        "orchestra/testbench-dusk": "^7.20|^8.0",
        "psy/psysh": "^0.11.12",
        "pestphp/pest": "^1.22|^2.0",
        "pestphp/pest-plugin-livewire": "^1.0|^2.0",
        "pestphp/pest-plugin-mock": "^1.0|^2.0",
        "pestphp/pest-plugin-laravel": "^1.4|^2.0",
        "laravel/pint": "^1.6"
    },
    "authors": [
        {
            "name": "Pedro Oliveira",
            "email": "pedrolivertwd@gmail.com"
        }
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "WireUi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "vendor/orchestra/testbench-core/laravel/app",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "./vendor/bin/dusk-updater detect --no-interaction"
        ],
        "test": "./vendor/bin/pest",
        "test:ci": "CI=true ./vendor/bin/pest",
        "pint": "./vendor/bin/pint",
        "pint:test": "./vendor/bin/pint --test"
    },
    "extra": {
        "laravel": {
            "providers": [
                "WireUi\\WireUiServiceProvider"
            ],
            "aliases": []
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
