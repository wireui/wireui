{
    "name": "wireui/wireui",
    "type": "library",
    "description": "TallStack components",
    "license": "MIT",
    "keywords": [
        "wireui",
        "livewire-ui",
        "blade components",
        "laravel components",
        "livewire components"
    ],
    "authors": [
        {
            "name": "Pedro Oliveira",
            "email": "pedro@wireui.dev"
        }
    ],
    "require": {
        "php": "^8.2|^8.3|^8.4",
        "laravel/framework": "^10.0|^11.0|^12.0",
        "wireui/heroicons": "^2.6"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^10.5|^11.5.3",
        "orchestra/testbench": "^8.14|^9.0|^10.0",
        "orchestra/testbench-dusk": "^8.14|^9.0",
        "psy/psysh": "^0.12.3",
        "pestphp/pest": "^2.34|^3.7",
        "pestphp/pest-plugin-livewire": "^2.1|^3.0",
        "pestphp/pest-plugin-laravel": "^2.4|^3.1",
        "laravel/pint": "^1.16",
        "livewire/livewire": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "WireUi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "vendor/orchestra/testbench-core/laravel/app",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "./vendor/bin/dusk-updater detect --no-interaction"
        ],
        "test": "./vendor/bin/pest",
        "test:ci": "CI=true ./vendor/bin/pest",
        "pint": "./vendor/bin/pint",
        "pint:test": "./vendor/bin/pint --test"
    },
    "extra": {
        "laravel": {
            "providers": [
                "WireUi\\ServiceProvider"
            ],
            "aliases": []
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
